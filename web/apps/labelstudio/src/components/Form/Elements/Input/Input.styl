.input,
.select,
.textarea
  height 40px
  min-height 40px
  font-size 16px
  line-height 22px
  border-radius 5px
  padding 0 16px
  transition box-shadow 80ms ease
  box-sizing border-box
  background none
  border 1px solid #555
  color #fff
  
  &_ghost
    border none
    padding 0
    background-color transparent
    outline none

input.input[type=radio]
  width: 16px
  height: 16px
  min-height: 0

.textarea
  padding 12px 16px
  min-height 50px
